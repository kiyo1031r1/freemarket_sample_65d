.registermain
  .registerAddress
    発送元・お届け先住所入力
  .addressForm
    - hissuTag = "必須"
    = form_for "#" do |f|
      .formNameZenkaku
        %p.titleBold お名前
        %span.hissuTag #{hissuTag}
        = f.text_field :text, placeholder: "例)山田", class: "zenkakuFirst formareaBig"
        = f.text_field :text, placeholder: "例)彩", class: "zenkakuLast formareaBig"
      .formNameKana.topmargin
        %p.titleBold お名前カナ
        %span.hissuTag #{hissuTag}
        = f.text_field :text, placeholder: "例)ヤマダ", class: "kanaFirst formareaBig"
        = f.text_field :text, placeholder: "例)アヤ", class: "kanaLast formareaBig"
      .formPostNumber.topmargin
        %p.titleBold 郵便番号
        %span.hissuTag #{hissuTag}
        = f.text_field :text, placeholder: "例)123-4567", class: "postNumber formareaBig"
      .formPrefecture.topmargin
        %p.titleBold 都道府県
        %span.hissuTag #{hissuTag}
        = f.collection_select :prefecture_id, Prefecture.all, :id, :name
      .formCity.topmargin
        %p.titleBold 市区町村
        %span.hissuTag #{hissuTag}
        = f.text_field :text, placeholder: "例)横浜市緑区", class: "addressCity formareaBig"
      .formBunchi.topmargin
        %p.titleBold 番地
        %span.hissuTag #{hissuTag}
        = f.text_field :text, placeholder: "例)青山1-1-1", class: "addressBanchi formareaBig"
      .formBuilding.topmargin
        %p.titleBold 建物名
        %span.notHissu 任意
        = f.text_field :text, placeholder: "例)柳ビル103", class: "addressBuilding formareaBig"
      .formPhoneNumber.topmargin
        %p.titleBold 電話
        %span.notHissu 任意
        = f.text_field :text, placeholder: "例)09012345678", class: "addressTEL formareaBig"
        = f.submit "次へ進む", class: "submitbtn"

